{% extends 'base.html.twig' %}

{% block title %}Shelter Dashboard{% endblock %}

{% block body %}
<div class="container index-container">

    <!-- ACTION BAR -->
    <div class="d-flex justify-content-end gap-2 mb-3">
        <a href="{{ path('shelter_pet_create') }}" class="btn add-new-pet-btn">
            Add new pet üêæ
        </a>

        <button
            class="btn operations-btn"
            data-bs-toggle="offcanvas"
            data-bs-target="#shelterOffcanvas"
        >
            ‚ò∞ Operations
        </button>
    </div>

    <h1 class="paw-card-h1">Shelter Dashboard</h1>

    <!-- PET GRID -->
    {% if pets is empty %}
        <h3 class="text-center">No animals found</h3>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for pet in pets %}
                <div class="col">
                    <div class="card paw-card paw-card--admin">
                        <div class="paw-card-inner">
                            <div class="paw-card-content">

                                <img
                                    src="{{ pet.image }}"
                                    class="paw-card-img"
                                    alt="{{ pet.name }}"
                                >

                                <div class="paw-card-title-wrapper">
                                    <h5 class="paw-card-title">{{ pet.name }}</h5>

                                    <hr class="index-card-hr">

                                    <div class="d-flex justify-content-center gap-2 mt-3">

                                        <a
                                            href="{{ path('shelter_pet_edit', { id: pet.id }) }}"
                                            class="btn update-btn px-3"
                                        >
                                            UPDATE
                                        </a>

                                        <form
                                            action="{{ path('shelter_pet_delete', { id: pet.id }) }}"
                                            method="post"
                                            onsubmit="return confirm('Are you sure you want to delete this pet?');"
                                        >
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_pet_' ~ pet.id) }}">
                                            <button type="submit" class="btn delete-btn px-3">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<!-- OFFCANVAS -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="shelterOffcanvas">
    <div class="offcanvas-header">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body text-center">
        <img
            src="{{ asset('img/navbar-logo.png') }}"
            alt="logo"
            style="width: 300px;"
            class="mb-4"
        >

        <ul class="list-unstyled admin-ul">

            <li class="dropdown">
                <a href="#" class="custom-nav-link dropdown-toggle" data-bs-toggle="dropdown">
                    Dashboard
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li>
                        <a href="{{ path('shelter_dashboard') }}" class="dropdown-item">
                            Overview
                        </a>
                    </li>
                </ul>
            </li>

            <hr>

            <li class="dropdown">
                <a href="#" class="custom-nav-link dropdown-toggle" data-bs-toggle="dropdown">
                    Pet Listings
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li>
                        <a href="{{ path('shelter_pets') }}" class="dropdown-item">
                            All Pets
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('shelter_pet_create') }}" class="dropdown-item">
                            Add New Pet
                        </a>
                    </li>
                </ul>
            </li>

            <hr>

            <li class="dropdown">
                <a href="#" class="custom-nav-link dropdown-toggle" data-bs-toggle="dropdown">
                    Applications
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li>
                        <a href="{{ path('shelter_applications') }}" class="dropdown-item">
                            Review Applications
                        </a>
                    </li>
                </ul>
            </li>

        </ul>
    </div>
</div>
{% endblock %}
