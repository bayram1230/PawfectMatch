{% extends 'base.html.twig' %}

{% block title %}User Dashboard{% endblock %}

{% block body %}
<div class="container index-container">

    <!-- ACTION BAR -->
    <div class="d-flex justify-content-end gap-2 mb-3">
        <button
            class="btn operations-btn"
            data-bs-toggle="offcanvas"
            data-bs-target="#userOffcanvas"
        >
            â˜° Menu
        </button>
    </div>

    <h1 class="paw-card-h1">User Dashboard</h1>

    <!-- WELCOME -->
    <div class="text-center mb-5">
        <h2 class="dashboard-title">
            Welcome back, {{ username }}
        </h2>
        <p class="dashboard-subtitle">
            Here is a quick overview of your account.
        </p>
    </div>

    <!-- KPI / OVERVIEW CARDS -->
    <div class="row g-4 justify-content-center">

        <div class="col-md-6 col-lg-4">
            <div class="card text-center p-4 shadow paw-card">
                <h5 class="mb-3">My Applications</h5>

                <h2 class="fw-bold">
                    {{ applications_count }}
                </h2>

                <a
                    href="{{ path('user_applications') }}"
                    class="btn btn-dark btn-sm mt-3"
                >
                    View Applications
                </a>
            </div>
        </div>

        {# Future extension examples (kept intentionally inactive) #}
