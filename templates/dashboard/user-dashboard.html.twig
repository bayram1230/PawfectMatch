        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body text-center">
        <img
            src="{{ asset('img/navbar-logo.png') }}"
            alt="logo"
            style="width: 300px;"
            class="mb-4"
        >

        <ul class="list-unstyled admin-ul">

            <li class="dropdown">
                <a
